<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/gray"
        tools:context=".AuthActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="140dp"
            android:textSize="25dp"
            android:text="Окно регистрации"
            android:textStyle="bold"
            android:textColor="#fdfdfd"/>


        <EditText
            android:id="@+id/user_login_reg"
            android:ems="10"
            android:hint="Введите login"
            android:textColorHint="@color/white"
            android:layout_marginTop="20dp"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="text" />

        <EditText
            android:id="@+id/user_password_reg"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:textColorHint="@color/white"
            android:hint="Введите email"
            android:layout_gravity="center"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:inputType="text" />
        <EditText
            android:id="@+id/user_email_reg"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:textColorHint="@color/white"
            android:hint="Введите password"
            android:layout_gravity="center"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:inputType="text" />

        <Button
            android:id="@+id/button_reg"
            android:layout_width="220dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:backgroundTint="#1C0E0E"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:text="Регистрация" />

        <TextView
            android:id="@+id/just_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="110dp"
            android:text="Уже есть аккаунт ?"
            android:textColor="#fdfdfd"
            android:textSize="15dp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/link_to_auth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Авторизация"
            android:textColor="#fdfdfd"
            android:textSize="17dp"
            android:textStyle="bold" />
    </LinearLayout>
</FrameLayout>